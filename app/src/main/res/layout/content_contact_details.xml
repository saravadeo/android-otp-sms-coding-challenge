<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.osarvade.kisannetwork.ContactDetails"
    tools:showIn="@layout/activity_contact_details"
    >

    <LinearLayout
        android:id="@+id/outer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:elevation="2dp">


    <LinearLayout android:id="@+id/thumbnail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"




        >
        <TextView
            android:id="@+id/list_image"
            android:text="OS"
            android:textStyle="bold"
            android:textSize="30dp"
            android:textColor="@android:color/white"
            android:textAlignment="center"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"

            android:layout_marginLeft="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimary"
            android:focusable="false"
            android:clickable="false"

            />




        <RelativeLayout android:layout_height="70dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center_vertical"

            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textSize="25dp"
                android:text="Onkar Sarvade"

                android:textColor="@android:color/black"
                android:id="@+id/name"

                android:focusable="false" android:clickable="false"
                />



        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"

        android:layout_below="@id/thumbnail">

        <TextView
            android:id="@+id/mbnumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="120837401340"
            android:textColor="@android:color/black"/>
        <TextView
            android:id="@+id/email"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:text="saravadeo@yahoo.com"
            android:hint="Email ID"
            android:textColor="@android:color/black"/>

    </LinearLayout>



    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/outer"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="Send"
        android:textSize="25dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:elevation="2dp"/>
</RelativeLayout>
